<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.posin.weight">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher6"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.posin.weight.ui.activity.MainActivity"
            android:configChanges="locale|layoutDirection|touchscreen|keyboard|keyboardHidden|uiMode|orientation|screenSize|fontScale"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.posin.weight.ui.activity.AdViewActivity"
            android:configChanges="locale|layoutDirection|touchscreen|keyboard|keyboardHidden|uiMode|orientation|screenSize|fontScale"
            android:screenOrientation="portrait" />

    </application>
</manifest>